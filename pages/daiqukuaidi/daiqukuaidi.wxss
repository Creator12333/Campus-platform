page {
  background-color: #f3f3f3;
  width: 100%;
  height: 100%;
}
.body {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  align-items: center;
}
.content, .otherTask{
  width: 90%;
  background-color: #fff;
  margin-top: 35rpx;
  border-radius: 30rpx;
}
 .content-top {
  display: flex;
  flex-direction: row;
  width: 100%;
  position: relative;
}
.content-top > image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin: 20rpx;
}
 .content-top > .content-top-text {
  display: flex;
  flex-direction: column;
}
.content-top > .content-top-text > .name{
  margin-top: 15rpx;
}
.content-top > .content-top-text > .time{
  color: gray;
  font-size: 24rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.content-top > .content-top-status {
  color: #fff;
  font-size: 28rpx;
  background-color: rgb(6, 211, 108);
  padding: 10rpx 20rpx;
  position: absolute;
  right: 0;
  top: 30rpx;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
}
.content-middle {
  width: 90%;
  background-color:#ffffe0;
  margin: 0 auto;
  margin-top: 20rpx;
  padding-bottom: 30rpx;
  margin-bottom: 50rpx;
}
.content-middle > .content-middle-top {
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid gray;
}
.content-middle > .content-middle-top > .top-left {
  margin: 20rpx 0 20rpx 20rpx;
  font-weight: bold;
}
.content-middle > .content-middle-top > .top-right {
  color: red;
  margin: 20rpx 20rpx 20rpx 0;
  font-weight: bold;
}
.content-middle > .content-middle-body {

}
.content-middle > .content-middle-body > .content-middle-body-lt {
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
}
.content-middle > .content-middle-body > .content-middle-body-lt > image {
  width: 30rpx;
  height: 30rpx;
  margin: 20rpx;
}
.content-middle > .content-middle-body > .content-middle-body-lt > text {
  margin-top: 20rpx;
}
.content-middle > .content-middle-body > .content-middle-body-lt > .gray {
  margin-left: 10rpx;
  color: gray;
}

.title {
  display: flex;
  flex-direction: row;
  width: 100%;
  background-color: #fff;
  justify-content: space-between;
}
.title > text {
  text-align: center;
  width: 50%;
  padding: 20rpx 0;
}
.select {
  background-color: orange;
  color: #fff;

}