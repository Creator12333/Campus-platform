page {
  background-color: #f3f3f3;
  width: 100%;
  height: 100%;
}
.title {
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: #fff;
}
.title > text {
  width: 33%;
  padding: 20rpx 20rpx;
  text-align: center;
}
.select {
  color: blue;
  border-bottom: 1rpx solid blue;
}
.content {
  display: flex;
  flex-direction: column;
  /* justify-content: space-between; */
  margin: 0 auto;
  height: 150rpx;
  width: 95%;
  background-color: #fff;
  margin-top: 20rpx;
  border-radius: 40rpx;
  position: relative;
}
.content-top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.content-top > .content-left {
  display: flex;
  flex-direction: row;
}
.content-top > .content-left > .name {
  margin: 20rpx 35rpx 20rpx 20rpx;
}
.content-top > .content-left > .time {
  color: gray;
  font-size: 24rpx;
  margin: 25rpx 20rpx 20rpx 20rpx;
}
.content-top > .content-right {
  color: red;
  margin: 20rpx 35rpx 20rpx 0;
}
.button {
  position: absolute;
  right: 0;
  bottom: 0;
}